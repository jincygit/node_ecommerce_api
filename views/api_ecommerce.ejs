<main id="main">

    <!-- ======= Hero Slider Section ======= -->
    <section id="hero-slider" class="hero-slider">
      <div class="container-md" data-aos="fade-in">
        <div class="row">
          <div class="col-12">
            <div class="swiper sliderFeaturedPosts">
              <div class="swiper-wrapper">
                <div class="swiper-slide">
                  <a href="" class="img-bg d-flex align-items-end" style="background-image: url('/images/unicorn.jpg');">
                    <div class="img-bg-inner">
                      <!-- <h2 >Create projects</h2> -->
                    </div>
                  </a>
                </div>

                
              </div>
              <div class="custom-swiper-button-next">
                <span class="bi-chevron-right"></span>
              </div>
              <div class="custom-swiper-button-prev">
                <span class="bi-chevron-left"></span>
              </div>

              <div class="swiper-pagination"></div>
            </div>
          </div>
        </div>
      </div>
    </section><!-- End Hero Slider Section -->


    <!-- ======= Product Create Start ======= -->
    <section>
        <div class="container contact-form">
            <form method="POST" action="/ecommerce/create" id="new-project-form">
                <h3>Create Product</h3>
               <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="text" name="name" class="form-control" placeholder="Your Name *" value="" required/>
                        </div>
                        <div class="form-group">
                            <input type="text" name="quantity" class="form-control" placeholder="Your Quantity *" value="" required/>
                        </div>

                        <div class="form-group" style="margin: 0px 0px 14px 0px;">
                            <input type="submit" name="btnSubmit" class="btnContact" value="Create Product" />
                        </div>
                    </div>

                </div>
            </form>
        </div>
    </section>
    <!-- Product Create End  -->


    <!-- ======= Product List Start ======= -->
    <section id="posts" class="posts">
        <h2 style="margin-left: 70px; text-align: center;">Ecommerce List </h2>
      <div class="container" data-aos="fade-up">
        <div class="row g-5">
   
          <div class="col-lg-12">
            <div class="row" id="projects-list-container">
                <% if(products){ %>
                    <% for(product of products){ %>
                    <div class="col-lg-4 border-start custom-border" id="item-<%= product._id %>">
                        <div class="post-entry-1">
                            <a href="details/<%= product._id %>"><img src="/images/post-landscape-5.jpg" alt="" class="img-fluid" style="height: 83px;width: 100%;"></a>
                            <div class="post-meta"><span><%= product.quantity %></span></div>
                            <h2><a href="details/<%= product._id %>"><%= product.name %></a></h2>
                            <div class="form-group" style="margin: 0px 0px 14px 0px;">
                                <a href="details/<%= product._id %>">
                                    <input type="submit" name="btnSubmit" class="btnContact" value="View/Edit Details" />
                                </a>
                            </div>
                            <div class="form-group" style="margin: 0px 0px 14px 0px;">
                                  <input type="submit" name="btnSubmit" onclick="toDelete('<%= product._id %>')" class="btnContact" value="Delete Details" />
                          </div>
                        </div>
                    </div>
                    <% } %>
                <% } else { %>
                    <div class="col-lg-4 border-start custom-border">
                        <div class="post-entry-1">
                            <h2>No Projects Available</h2>
                        </div>
                    </div>
                <% } %>
                
            </div>
          </div>

        </div> <!-- End .row -->
      </div>
    </section> 
    <!-- Product List End  -->

    


  </main><!-- End #main -->